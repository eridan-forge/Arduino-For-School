// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∫–æ—Ä–æ—Ç–∫–æ–≥–æ –∑–≤—É–∫–æ–≤–æ–≥–æ —Å–∏–≥–Ω–∞–ª–∞
void beep(int duration) {
  digitalWrite(BUZZER_PIN, HIGH);
  delay(duration);
  digitalWrite(BUZZER_PIN, LOW);
  delay(50);
}

void loop() {
  // üî¥ –§–∞–∑–∞ 1: –ö—Ä–∞—Å–Ω—ã–π
  Serial.println("üî¥ –ö–†–ê–°–ù–´–ô: –°–¢–û–ü");
  digitalWrite(10, HIGH);
  digitalWrite(11, LOW);
  digitalWrite(12, LOW);
  delay(5000);
  
  // üü¢ –§–∞–∑–∞ 2: –ó–µ–ª—ë–Ω—ã–π —Å–æ –∑–≤—É–∫–æ–º
  Serial.println("üü¢ –ó–ï–õ–Å–ù–´–ô: –ò–î–¢–ò (—Å–æ –∑–≤—É–∫–æ–º)");
  digitalWrite(10, LOW);
  digitalWrite(11, LOW);
  digitalWrite(12, HIGH);
  beep(200);  // –ö–æ—Ä–æ—Ç–∫–∏–π –∑–≤—É–∫ –ø—Ä–∏ –≤–∫–ª—é—á–µ–Ω–∏–∏ –∑–µ–ª—ë–Ω–æ–≥–æ
  delay(5000 - 250);  // –ú–∏–Ω—É—Å –≤—Ä–µ–º—è –∑–≤—É–∫–∞
  
  digitalWrite(10, LOW);
  digitalWrite(11, LOW);
  digitalWrite(12, LOW);
  delay(1000);
  
  // –ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ –ø–µ—Ä–µ–¥ –∫—Ä–∞—Å–Ω—ã–º
  Serial.println("‚ö†Ô∏è –í–ù–ò–ú–ê–ù–ò–ï! –°–∫–æ—Ä–æ –∫—Ä–∞—Å–Ω—ã–π");
  for (int i = 0; i < 2; i++) {
    beep(100);
    delay(200);
  }
  
  // üü° –§–∞–∑–∞ 3: –ñ—ë–ª—Ç—ã–π –º–∏–≥–∞–µ—Ç
  Serial.println("üü° –ñ–Å–õ–¢–´–ô: –í–ù–ò–ú–ê–ù–ò–ï");
  for (int i = 1; i <= 3; i++) {
    Serial.print("  –ú–∏–≥–∞–Ω–∏–µ ");
    Serial.println(i);
    
    digitalWrite(11, HIGH);
    beep(50);  // –¢–∏—Ö–∏–π –∑–≤—É–∫ –ø—Ä–∏ –∫–∞–∂–¥–æ–º –º–∏–≥–∞–Ω–∏–∏
    delay(450);  // 500 - 50 (–≤—Ä–µ–º—è –∑–≤—É–∫–∞)
    
    digitalWrite(11, LOW);
    delay(500);
  }
  
  Serial.println("=== –¶–ò–ö–õ –ó–ê–í–ï–†–®–Å–ù ===\n");
}
